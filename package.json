{
  "name": "template-react",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/liandro-silva/template-react.git",
  "author": "Liandro Silva <liandro.silva@outlook.com>",
  "license": "MIT",
  "scripts": {
    "start:local": "env-cmd -f .env.local webpack serve --progress --config webpack/webpack.dev.js",
    "start:dev": "env-cmd -f .env.dev webpack serve --progress --open --config config/webpack/webpack.dev.js",
    "build:dev": "env-cmd -f .env.dev webpack --progress --config config/webpack/webpack.dev.js",
    "start:prod": "env-cmd -f .env.prod webpack serve --progress --open --config config/webpack/webpack.prod.js",
    "build:prod": "env-cmd -f .env.prod webpack --progress --config config/webpack/webpack.prod.js",
    "check:eslint": "eslint src --ext ts,tsx --max-warnings=0",
    "check:codestyle": "prettier --check 'src/*'",
    "check:type": "tsc --project tsconfig.json",
    "format:codestyle": "prettier --write .",
    "format:eslint": "eslint 'src/**' --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*{ts,tsx}": [
      "yarn format:eslint",
      "yarn format:codestyle"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@svgr/webpack": "^6.3.1",
    "@swc/core": "^1.3.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "colored-progress-bar-webpack-plugin": "^1.2.4",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.2",
    "env-cmd": "^10.1.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.7.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^29.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react-refresh": "^0.14.0",
    "sass-loader": "^13.0.2",
    "serve": "^14.0.1",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  }
}
